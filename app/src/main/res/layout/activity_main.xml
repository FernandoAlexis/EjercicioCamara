<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="75dp"
       android:gravity="center_horizontal"
       android:padding="10dp"
       android:textStyle="bold"
       android:textSize="15dp"
       android:text="Image Picker in Android">

   </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_margin="5dp"
            android:elevation="1.0dp"
            app:cardCornerRadius="10dp"
            android:padding="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/dashed_border">

            <ImageView
                android:id="@+id/my_avatar"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_baseline_image_24" />

            <TextView
                android:id="@+id/idEventBrowse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_avatar"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="Captura la imagen aqui desde la galeria"/>



            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idEventBrowse"
                android:layout_marginBottom="50dp"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:text="sdsdsd"/>



        </RelativeLayout>



    </LinearLayout>

    <ImageView
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"

        android:src="@drawable/ic_baseline_send_24"

        >

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    </LinearLayout>





</RelativeLayout>